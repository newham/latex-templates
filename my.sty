}
% 方程式
\newcommand{\equa}[1]{
  \begin{equation}
    #1
  \end{equation}
}
% 公式
\newcommand{\algor}[5]{
\begin{algorithm}[htb] 
\caption{#1} %标题
\label{algor#2} %标签，algor[n]来引用
\begin{algorithmic}[1] %这个1 表示每一行都显示数字
\REQUIRE #3\\ %算法的输入参数：Input
\ENSURE #4\\ %算法的输出：Output
#5 %算法体
\end{algorithmic}
\end{algorithm}
}

% 表格
\newcommand{\tbl}[6][0.9]{
    \begin{table}[width=#1\linewidth,cols=4,pos=htb]
        \caption{#2}\label{#3}
        \begin{tabular*}{\tblwidth}{@{} #4@{} }
        \toprule
        #5\\
        \midrule
        #6
        \bottomrule
        \end{tabular*}
    \end{table}
}

